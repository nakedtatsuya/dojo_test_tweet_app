<div class="main posts-show">
  <div class="container">
    <% if @post.parent %>
      <div class="posts-index-item">
        <% if @post.parent.is_private %>
          <div class="post-right">
          <div class="post-user-name">
            <p>この投稿は現在非公開です</p>
          </div>
        </div>
        <% else %>
        <div class="post-left">
          <img src="<%= "/user_images/#{@post.parent.user.image_name}" %>">
        </div>
        <div class="post-right">
          <div class="post-user-name">
            <%= link_to(@post.parent.user.name, "/users/#{@post.parent.user.id}") %>
          </div>
          <%= link_to(@post.parent.content, "/posts/#{@post.parent.id}") %>
        </div>
        <% end %>
      </div>
    <% end %>
    <div class="posts-show-item">
      <div class="post-user-name">
        <img src="<%= "/user_images/#{@user.image_name}" %>">
        <%= link_to(@user.name, "/users/#{@user.id}") %>
      </div>
      <p>
        <%= @post.content %>
      </p>
      <div class="post-time">
        <%= @post.created_at %>
      </div>
      <%= link_to("/posts/#{@post.id}/thread", {method: "get"}) do %>
          <span class="fa fa-comment-o"></span>
      <% end %>
      <%= @child_posts.count %>
      <% if Like.find_by(user_id: @current_user.id, post_id: @post.id) %>
        <%= link_to("/likes/#{@post.id}/destroy", {method: "post"}) do %>
          <span class="fa fa-heart like-btn-unlike"></span>
        <% end %>
      <% else %>
        <%= link_to("/likes/#{@post.id}/create", {method: "post"}) do %>
          <span class="fa fa-heart like-btn"></span>
        <% end %>
      <% end %>
      <%= @likes_count %>
      <% if @post.user_id == @current_user.id %>
        <div class="post-menus">
          <%= link_to("編集", "/posts/#{@post.id}/edit") %>
          <%= link_to("削除", "/posts/#{@post.id}/destroy", {method: "post"}) %>
        </div>
      <% end %>
    </div>
    <% @child_posts.each do |post| %>
      <% if !post.is_private %>
      <div class="posts-index-item">
        <div class="post-left">
          <img src="<%= "/user_images/#{post.user.image_name}" %>">
        </div>
        <div class="post-right">
          <div class="post-user-name">
            <%= link_to(post.user.name, "/users/#{post.user.id}") %>
          </div>
          <%= link_to(post.content, "/posts/#{post.id}") %>
        </div>
      </div>
      <% end %>
    <% end %>
  </div>
</div>